<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <CheckBoxPreference
        android:defaultValue="false"
        android:key="@string/key_reset"
        android:summary="@string/summary_reset"
        android:title="@string/title_reset" >
    </CheckBoxPreference>

    <ListPreference
        android:defaultValue="-1"
        android:entries="@array/entries_draw_mode"
        android:key="@string/key_draw_mode"
        android:summary="@string/summary_draw_mode"
        android:title="@string/title_draw_mode" />

    <MultiSelectListPreference
        android:defaultValue="@array/empty_array"
        android:entries="@array/empty_array"
        android:entryValues="@array/empty_array"
        android:key="@string/key_select_objects"
        android:summary="@string/summary_select_objects"
        android:title="@string/title_select_objects" />

    <ListPreference
        android:defaultValue="-1"
        android:entries="@array/entries_camera_mode"
        android:key="@string/key_camera_mode"
        android:summary="@string/summary_camera_mode"
        android:title="@string/title_camera_mode" />

    <PreferenceScreen
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:summary="@string/summary_vectors"
        android:title="@string/title_vectors" >
        <PreferenceCategory android:title="@string/title_camera_position" >
            <EditTextPreference
                android:defaultValue="0"
                android:inputType="number"
                android:key="@string/key_camera_position_x"
                android:title="@string/title_x" >
            </EditTextPreference>
            <EditTextPreference
                android:defaultValue="0"
                android:inputType="number"
                android:key="@string/key_camera_position_y"
                android:title="@string/title_y" >
            </EditTextPreference>
            <EditTextPreference
                android:defaultValue="0"
                android:inputType="number"
                android:key="@string/key_camera_position_z"
                android:title="@string/title_z" >
            </EditTextPreference>
        </PreferenceCategory>
        <PreferenceCategory android:title="@string/title_ball_position" >
            <EditTextPreference
                android:defaultValue="0"
                android:inputType="number"
                android:key="@string/key_ball_position_x"
                android:title="@string/title_x" >
            </EditTextPreference>
            <EditTextPreference
                android:defaultValue="0"
                android:inputType="number"
                android:key="@string/key_ball_position_y"
                android:title="@string/title_y" >
            </EditTextPreference>
            <EditTextPreference
                android:defaultValue="0"
                android:inputType="number"
                android:key="@string/key_ball_position_z"
                android:title="@string/title_z" >
            </EditTextPreference>
        </PreferenceCategory>
        <PreferenceCategory android:title="@string/title_ball_speed" >
            <EditTextPreference
                android:defaultValue="0"
                android:inputType="number"
                android:key="@string/key_ball_speed_x"
                android:title="@string/title_x" >
            </EditTextPreference>
            <EditTextPreference
                android:defaultValue="0"
                android:inputType="number"
                android:key="@string/key_ball_speed_y"
                android:title="@string/title_y" >
            </EditTextPreference>
            <EditTextPreference
                android:defaultValue="0"
                android:inputType="number"
                android:key="@string/key_ball_speed_z"
                android:title="@string/title_z" >
            </EditTextPreference>
        </PreferenceCategory>
    </PreferenceScreen>

</PreferenceScreen>